<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <%= render 'kml_styles' %>
  <Document>
    <% @zip_codes.each do |z| %>
      <Placemark>
        <name><%= "#{z.long_name} (#{z.code})" %></name>
        <description>
          Median Rent Price
          <%= z.median_rent_on(params[:date]).print unless z.median_rent_on(params[:date]).nil? %>
        </description>
        <styleUrl><%= assign_style(z.median_rent_on(params[:date])) %></styleUrl>
        <%= z.kml.html_safe %>
      </Placemark>
    <% end %>
  </Document>
</kml>
